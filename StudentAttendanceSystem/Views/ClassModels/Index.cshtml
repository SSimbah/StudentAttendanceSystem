@model IEnumerable<Domain.Entities.ClassModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Class List</h1>

<p>
    <a asp-action="Create" asp-route-id="ClassID">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassSchedule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassTime_Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassTime_End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.SubjectNameExt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassSchedule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassTime_Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassTime_End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor.FullName)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@item.ClassID">Edit</a>&nbsp;|&nbsp;<a asp-action="Details" asp-route-id="@item.ClassID">Details</a>&nbsp;|&nbsp;<a asp-action="Delete" asp-route-id="@item.ClassID">Delete</a>&nbsp;|&nbsp;<a asp-action="StudentList" asp-route-id="@item.ClassID">Students</a>
            </td>
        </tr>
}
    </tbody>
</table>
