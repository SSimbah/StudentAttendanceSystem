@model IEnumerable<StudentAttendanceSystem.Models.ClassModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Class List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassSubject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassSchedule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassTime_Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassTime_End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassSubject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassSchedule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassTime_Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassTime_End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClassID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClassID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClassID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
